<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/charts_list_small_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/share_default"
        android:layout_margin="@dimen/five_dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_toRightOf="@id/charts_list_small_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/charts_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="songname" />

        <TextView
            android:id="@+id/charts_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ten_sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/charts_list_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ten_dp"
        android:background="@mipmap/ic_list_more_invalid" />

</RelativeLayout>