<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommend_iv"
            android:layout_width="@dimen/one_hundred_ten_dp"
            android:layout_height="@dimen/one_hundred_ten_dp"
            android:background="@mipmap/default_radio_list_item_image" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recommend_iv"
            android:layout_alignEnd="@id/recommend_iv"
            android:layout_margin="@dimen/five_dp"
            android:src="@mipmap/bt_play_nor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recommend_iv"
            android:layout_alignStart="@id/recommend_iv"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listent_count_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_listen_count" />

            <TextView
                android:id="@+id/recommend_listennum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/five_dp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/twelve_sp" />

    <TextView
        android:id="@+id/recommend_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightBlack"
        android:textSize="@dimen/ten_sp" />
</LinearLayout>