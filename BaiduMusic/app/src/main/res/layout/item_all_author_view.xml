<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/author_image_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_ten_dp"
            android:src="@mipmap/default_artist" />

        <TextView
            android:id="@+id/author_name_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/author_image_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_ten_dp"
            android:src="@mipmap/default_artist" />

        <TextView
            android:id="@+id/author_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/author_image_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_ten_dp"
            android:src="@mipmap/default_artist" />

        <TextView
            android:id="@+id/author_name_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>