<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/radio_play_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_eighty_dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/default_radio_list_item_image" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty_dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/radio_play_iv"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/radio_play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/radio_palay_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_play_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/radio_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/radio_palay_author"
            android:text="@string/default_time_zero" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/radio_play_button"
        android:layout_width="@dimen/sixty_five_dp"
        android:layout_height="@dimen/sixty_five_dp"
        android:layout_alignBottom="@id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sixty_five_dp"
        android:src="@mipmap/scenario_drive_play_button_normal" />

</RelativeLayout>